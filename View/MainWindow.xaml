<Window x:Class="Tetris.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:Model="clr-namespace:Tetris.Model"
        xmlns:View="clr-namespace:Tetris.View"
        xmlns:i ="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
        xmlns:cmd="clr-namespace:GalaSoft.MvvmLight.Command;assembly=GalaSoft.MvvmLight.Extras.WPF4"
        
        Title="Tetris" Height="700" Width="600" ResizeMode="NoResize" >
    
    <StackPanel>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="100" />
                <RowDefinition Height="300" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="350" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <GridSplitter HorizontalAlignment="Center" Width="6"
                  Grid.Row="0" Grid.Column="1" Grid.RowSpan="3" />

            <Canvas Name="canvas1" Grid.Column="0" HorizontalAlignment="Left" VerticalAlignment="Top">
                    <ItemsControl ItemsSource="{Binding Bricks}"/>
                    <i:Interaction.Triggers>
                        <i:EventTrigger EventName="KeyUp">
                            <cmd:EventToCommand Command="{Binding DataContext.MoveBrickCommand, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Window}}}" PassEventArgsToCommand="True"/>
                        </i:EventTrigger>
                    </i:Interaction.Triggers>
            </Canvas>
            <Canvas Name="canvas2" Grid.Column="1" Grid.Row="0" HorizontalAlignment="Left" VerticalAlignment="Top">
                <TextBlock Text="Hello" />
            </Canvas>
            <GroupBox Name="groupbox1" Grid.Column="1" Grid.Row="1" HorizontalAlignment="Left" VerticalAlignment="Top">
                
            </GroupBox>
        </Grid>
    </StackPanel>
</Window>
